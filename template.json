{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
    "image_name": "deepsparse-22-04-snapshot-{{timestamp}}",
    "apt_packages": "python3-pip python3-dev build-essential libssl-dev libffi-dev python3-setuptools",
    "application_name": "DeepSparse",
    "deepsparse_version": "1.4.2"
  },
  "sensitive-variables": ["do_api_token"],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-22-04-x64",
      "region": "nyc3",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "cloud-init status --wait"
      ]
    },
    {
      "type": "file",
      "source": "deepsparse-22-04/files/etc/",
      "destination": "/etc/"
    },
    {
      "type": "file",
      "source": "deepsparse-22-04/files/var/",
      "destination": "/var/"
    },
    {
      "type": "file",
      "source": "common/files/var/",
      "destination": "/var/"
    },
    {
      "type": "shell",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8"
      ],
      "inline": [
        "cloud-init status --wait",
        "apt -qqy update",
        "apt -qqy -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' full-upgrade",
        "apt -qqy -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' install {{user `apt_packages`}}",
        "apt-get -qqy clean"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "DEEPSPARSE_VERSION={{user `deepsparse_version`}}",
        "application_name={{user `application_name`}}",
        "application_version=$(python3 -c 'import deepsparse; print(deepsparse.get_version())')",
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8"
      ],
      "scripts": [
        "deepsparse-22-04/scripts/deepsparse.sh",
        "deepsparse-22-04/scripts/90-cleanup.sh",
        "deepsparse-22-04/scripts/99-img_check.sh"
      ]
    }
  ]
}